# Excel File Configuration
EXCEL_FILE_PATH=./birthdays.xlsx

# Gmail Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_PASSWORD=your-app-password
GMAIL_FROM=Birthday System <your-email@gmail.com>

# Twilio WhatsApp Configuration (Optional - if not provided, WhatsApp notifications will be disabled)
# Get these credentials from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# Twilio WhatsApp number in format: whatsapp:+14155238886
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Scheduler Configuration (Cron expression - default: 9 AM daily)
CRON_SCHEDULE=0 9 * * *

# Template Configuration (Optional)
TEMPLATE_FILE_PATH=./email-template.txt
# Optional custom WhatsApp template file (defaults to email template if not provided)
WHATSAPP_TEMPLATE_FILE_PATH=./whatsapp-template.txt

# Logging Configuration
LOG_LEVEL=info
LOG_DIRECTORY=./logs
